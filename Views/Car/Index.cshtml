@using MVCAssign1.Models;
@using Microsoft.Extensions.Localization

@inject IStringLocalizer<SharedResource> Localizer

@model IEnumerable<Car>


  <div class="album py-5 bg-light">
    <div class="container">
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

  @foreach (var item in Model)
  {
     
            <div class="col-md-4">
              <div class="card mb-4 box-shadow">
                    <img class="img-fluid" src="https://via.placeholder.com/500x300" alt="" />
              <div class="card-body">
                  <h3><a asp-area="" asp-controller="Car" asp-action="Detail" asp-route-id="@item.Id">@item.Mark @item.Model</a></h3>
                  <h2>@item.Price €</h2>
                  <p style="height: 125px;" class="card-text">@item.Description</p>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">

                        @if (User.Identity.IsAuthenticated && User.IsInRole("admin"))
                        {
                             <a asp-controller="Car" asp-action="Delete" asp-route-id="@item.Id"  class="btn btn-sm btn-outline-secondary">@Localizer["Delete"]</a>
                        }

                     @*
                      <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
                      <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                      *@
                    </div>
                 
                  </div>
                </div>
              </div>
            </div>
    }

       </div>
      </div>
    </div>


   