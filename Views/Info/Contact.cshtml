@using MVCAssign1.ViewModel
@model EmailViewModel

@using Microsoft.Extensions.Localization

@inject IStringLocalizer<SharedResource> Localizer

<div class="container">
  <form method="post" asp-controller="Info" asp-action="Contact">

    <label asp-for="FromEmail">@Localizer["Email"]</label>
    <input asp-for="FromEmail" type="text"  placeholder="Your email..">

    <label asp-for="Name">@Localizer["Name"]</label>
    <input asp-for="Name" type="text"  placeholder="Your name..">

    <label asp-for="Surname">@Localizer["Surname"]</label>
    <input asp-for="Surname" type="text" placeholder="Your last name..">

    <label asp-for="Country">@Localizer["Country"]</label>
    <select asp-for="Country">
      <option value="bih">Bosna i Hercegovina</option>
      <option value="srb">Srbija</option>
      <option value="australia">Australija</option>
      <option value="canada">Kanada</option>
      <option value="usa">USA</option>
    </select>

    <label asp-for="Subject">@Localizer["Subject"]</label>
    <input asp-for="Subject" placeholder=@Localizer["Title"]></input>

    <textarea asp-for="Body" placeholder="@Localizer["Your message for us..."]" style="height:200px"></textarea>

    <input type="submit" value=@Localizer["Submit"]>

  </form>
</div>

<style>
	/* Style inputs with type="text", select elements and textareas */
input[type=text], select, textarea {
  width: 100%; /* Full width */
  padding: 12px; /* Some padding */ 
  border: 1px solid #ccc; /* Gray border */
  border-radius: 4px; /* Rounded borders */
  box-sizing: border-box; /* Make sure that padding and width stays in place */
  margin-top: 6px; /* Add a top margin */
  margin-bottom: 16px; /* Bottom margin */
  resize: vertical /* Allow the user to vertically resize the textarea (not horizontally) */
}

/* Style the submit button with a specific background color etc */
input[type=submit] {
  background-color: #04AA6D;
  color: white;
  padding: 12px 20px;
  border: none;
  border-radius: 4px;
  cursor: pointer;
}

/* When moving the mouse over the submit button, add a darker green color */
input[type=submit]:hover {
  background-color: #45a049;
}

/* Add a background color and some padding around the form */
.container {
  border-radius: 5px;
  background-color: #f2f2f2;
  padding: 20px;
}
</style>